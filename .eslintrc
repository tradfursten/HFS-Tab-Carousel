{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "ecmaVersion": 6,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "chrome": false,
    "__dirname": false
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "curly": 2,
    "linebreak-style": ["error", "unix"],
    "no-console": 0,
    "no-const-assign": "off",
    "no-irregular-whitespace": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": 2
  }
}